<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Maharishi International University"
        android:textColor="#9C1E8F"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:textSize="20sp"/>

    <Space android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <Button
        android:id="@+id/button"
        android:text="Set Background"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:onClick="bgColorChange"
        android:layout_height="wrap_content"/>

    <Space android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/miulogo"
        android:contentDescription="Change background color of image"
        android:layout_gravity="center" />





</LinearLayout>
